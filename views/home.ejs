<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home Page</title>
</head>
<body>
    <!-- locals contains data from backend... -->
    <h1>
        URL Generator  --------  Shorten your URL ---------------------   
    </h1> 
    <% if (locals.id) { %>
        <a href="http://localhost:8001/url/<%= id %>">
        <p>Generated Short Link : http://localhost:8001/url/<%=id%></p>
        </a>
    <% } %>
    <div>
        <form method="POST" action="/url">
        <label >Enter Your original Link  </label>
        <br>
        <hr>
        <input type = "text" name="url" placeholder="Enter your link here" required></input>
        <!-- <input type="button" value="Generate Short Link" onclick="window.location.href='/generate'">  -->
         <button type = "submit">Generate</button>
    </form>
    </div>
    <br><br>
    <div>
        <% if (locals.urls) { %>
         <table>
            <thead>
                <th>S.No</th>
                <th>ShortID</th>
                <th>Redirect</th>
                <th>Clicks</th>
            </thead>
            <tbody>
                <% urls.forEach((url,index) => { %>
                    <tr>
                        <td><%= index+1 %></td>
                        <td><%= url.shortId %></td>
                        <td><%= url.redirectURL %></td>
                        <td><%= url.visitHistory.length %></td>
                    </tr>
                <% }) %>
            </tbody>

         </table>
        <% } %>
    </div>
    
</body>
</html>